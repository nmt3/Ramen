<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="title">会員一覧</h3>
      <%= paginate @customers %>
      <% @customers.each do |customer| %>
      <table align="center" border="1" class="store">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <div class="is_deleted">
                <% if customer.is_deleted %>
                  退会
                <% else %>
                  有効
                <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%#= paginate @customers %>
    </div>
  </div>
</div>