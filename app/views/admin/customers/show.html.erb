<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-12">
      <div class="customer_profile_image">
        <h4>
          <%= @customer.name %>さんの会員詳細<br>
          <%= link_to "プロフィールを編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
        </h4>
          <% if @customer.image.attached? %>
            <%= image_tag @customer.image %>
          <% else %>
            <%= image_tag "no_image", size: "140x140" %>
          <% end %>
        <table border="1" style="border-collapse: collapse">
          <tr>
            <th class="post_th">会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
            <th class="post_th">氏名</td>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <th class="post_th">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
            <th class="post_th">年齢</td>
            <td><%= @customer.age %></td>
          </tr>
          <tr>
            <th class="post_th">性別</td>
            <td><%= @customer.sex_method_i18n %></td>
          </tr>
          <tr>
            <th class="post_th">居住地</td>
            <td><%= @customer.residence %></td>
          </tr>
          <tr>
            <th class="post_th">コメント</td>
            <td><%= @customer.comment %></td>
          </tr>
          <tr>
            <th class="post_th">会員ステータス</td>
            <td class="is_deleted">
              <% if @customer.is_deleted %>
                退会
              <% else %>
                有効
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-md-9 col-sm-12">
      <h3 class="title">投稿一覧</h3>
      <%= paginate @posts %>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-3 col-sm-5">
            <div class="post_list">
              <%= link_to admin_post_path(post.id) do %>
                <% if post.image.attached? %>
                  <%= image_tag post.image, size: "150x150" %>
                <% else %>
                  <%= image_tag 'no_image', size: "150x150" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-md-9 col-sm-12">
            <div class="post_list">
              <table>
                <tbody>
                  <tr>
                    <th class="post_th">店名:</th>
                    <td><%= post.store_name %></td>
                  </tr>
                  <tr>
                    <th class="post_th">営業日:</th>
                    <td>
                      <%  weekly_columns.each_with_index do |day,i| %>
                        <% if post[day] == true %>
                         <a><%= ["月","火","水","木","金","土","日"][i] %></a>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <th class="post_th">営業時間</th>
                    <td><%= post.business_time %></td>
                  </tr>
                  <tr>
                    <th class="post_th">ジャンル:</th>
                    <td>
                      <!--ジャンル-->
                      <% post.tags.each do |tag| %>
                        <%= tag.genre %>
                      <% end %>
                      <!--ジャンル-->
                    <td>
                  </tr>
                  <tr>
                    <th class="post_th">所在地:</th>
                    <td><%= post.address %></td>
                  </tr>
                  <tr>
                    <th class="post_th">評価平均:</th>
                    <td>
                      <% if post.reviews.exists? %>
                        <%= post.reviews.average(:star).floor(1) %>
                      <%else%>
                        ー
                      <% end %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>


