<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3><%= @customer.name %>さんの投稿一覧</h3>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-3">
            <div class="post">
              <%= link_to admin_post_path(post.id) do %>
                <% if post.image.attached? %>
                  <%= image_tag post.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %><br>
                <%= post.store_name %>
              <% end %>
              <p>コメント</p>
              <p>評価</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>