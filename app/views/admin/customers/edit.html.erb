<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-7 px-5 px-sm-0 mx-auto">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <h3><%= @customer.name %>さんの会員情報編集</h3>
      <table class="table">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td><%= f.label "ニックネーム" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :"年齢" %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :"性別" %></td>
            <td>
              <%= f.radio_button :sex_method, Customer.sex_methods.key(0) %>
              <%= f.label :sex_men, Customer.sex_methods_i18n[:men] %>
              <%= f.radio_button :sex_method, Customer.sex_methods.key(1) %>
              <%= f.label :sex_women, Customer.sex_methods_i18n[:women] %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"居住地" %></td>
            <td>
               <%= f.select :prefecture, Customer.residences.keys, {} %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"コメント" %></td>
            <td><%= f.text_area :comment, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label "会員ステータス" %></td>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>

              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>