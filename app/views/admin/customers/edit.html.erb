<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <h3 align="center"><%= @customer.name %>さんの会員情報編集</h3>
      <table class="customer" border="1" align="center" >
        <tbody>
          <tr>
            <td><%= f.label "会員ID", class: "admin_customer" %></td>
            <td class="admin_customer"><%= @customer.id %></td>
          </tr>
          <tr>
            <td><%= f.label "ニックネーム", class: "admin_customer" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label "メールアドレス", class: "admin_customer" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label "年齢", class: "admin_customer" %></td>
            <td><%= f.select :age, Customer.ages.keys, {} %></td>
          </tr>
          <tr>
            <td><%= f.label "性別", class: "admin_customer" %></td>
            <td>
              <%= f.radio_button :sex_method, Customer.sex_methods.key(0) %>
              <%= f.label :sex_men, Customer.sex_methods_i18n[:men] %>
              <%= f.radio_button :sex_method, Customer.sex_methods.key(1) %>
              <%= f.label :sex_women, Customer.sex_methods_i18n[:women] %>
            </td>
          </tr>
          <tr>
            <td><%= f.label "居住地", class: "admin_customer" %></td>
            <td>
               <%= f.select :residence, Customer.residences.keys, {} %>
            </td>
          </tr>
          <tr>
            <td><%= f.label "コメント", class: "admin_customer" %></td>
            <td><%= f.text_area :comment, autofocus: true, size: "35x5" %></td>
          </tr>
          <tr>
            <td><%= f.label "会員ステータス", class: "admin_customer" %></td>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>

              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>