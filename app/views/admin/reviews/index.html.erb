<div class="container">
  <div class="row">
    <!--<div class="col-md-4">-->
      <%= render 'admin/posts/show', posts: @posts %>
    <!--</div>-->

    <div class="col-md-8">
      <div class="review">
        <h4>
          <%= link_to "口コミ一覧", post_path(@post.id) %>
          画像一覧
        </h4>
        <div class="row">
            <% @reviews.each do |r| %>
              <div class="col-md-2">
                <% if r.image.attached? %>
                  <%=link_to r.image,  "data-lightbox": r.image do %>
                    <%= image_tag r.image, size: "100x100" %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>