<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="title">投稿一覧</h3>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-3">
            <div class="post">
              <%= link_to admin_post_path(post.id) do %>
                <% if post.image.attached? %>
                  <%= image_tag post.image, size: "180x180" %>
                <% else %>
                  <%= image_tag 'no_image', size: "180x180" %>
                <% end %><br>
                <%= post.store_name %>
              <% end %>
              <p>
                ジャンル:
                <% post.tags.each do |tag| %>
                  <%= tag.genre %>
                <% end %>
              </p>
              <p>コメント</p>
              <p>評価</p>
              <p>投稿日時<%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

