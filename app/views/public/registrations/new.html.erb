<div class="registration">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <td><%= f.label "ニックネーム" %></td>
            <td><%= f.text_field :name %></td>
          </div>

          <div class="field">
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>

          <div class="field">
            <td>
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>

          <div class="field">
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>

        <%= render "public/shared/links" %>

      </div>
    </div>
  </div>
</div>
