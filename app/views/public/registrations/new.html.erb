<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <td><%= f.label "ニックネーム" %></td>
    <td><%= f.text_field :name %></td>
  </div>

  <div class="field">
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>

  <div class="field">
    <td>
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </div>

  <div class="field">
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
