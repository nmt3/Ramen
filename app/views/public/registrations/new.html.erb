<div class="login">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <td><%= f.label "ニックネーム" %></td>
            <td><%= f.text_field :name, placeholder: "らーめん太郎" %></td>
          </div>

          <div class="field">
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxxxxx@xxxx.xx.xx" %></td>
          </div>

          <div class="field">
            <td>
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>

          <div class="field">
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>

          <div class="field">
            <%= f.submit "登録", class: "btn btn-success" %>
          </div>
        <% end %>

          <div class="field">
            <%= link_to "ログイン画面へ", new_customer_session_path, class: "btn btn-dark" %>
          </div>
      </div>
    </div>
  </div>
</div>
