<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h3>マイページ</h3>
      <p>
        <span>登録情報</span>
        <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success" %>
      </p>
      <table class="mypage" border="1">
        <tbody>
          <tr>
            <td>ニックネーム</td>
            <td>
              <%= current_customer.name %>
            </td>
          <tr>
            <td>メールアドレス</td>
            <td><%= current_customer.email %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "ブックマーク一覧", bookmarks_path(current_customer), class: "btn btn-success" %>
    </div>
  </div>
</div>