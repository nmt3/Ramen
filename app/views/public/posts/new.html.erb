<h3>新規投稿</h3>
<div class="new_post">
  <%= form_with model: @post, local: :true do |f| %>
    <table class="post">
      <tr>
        <td><%= f.label "画像" %></td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td><%= f.label "店舗名" %></td>
        <td><%= f.text_field :store_name %></td>
      </tr>
      <tr>
        <td><%= f.label "営業日" %></td>
        <td>
          <span class="checkbox-inline">
            <% weekly_columns.each_with_index do |day,i| %>
              <%= f.check_box day.to_sym, {}, "true", "false" %>
              <%= f.label day.to_sym, ["月", "火", "水", "木", "金", "土", "日"][i] %>
            <% end %>
          </span>
        </td>
      </tr>
      <tr>
        <td><%= f.label "営業時間" %></td>
        <td>
          <%= f.time_select :open %>~<%= f.time_select :close %>
        </td>
      </tr>
      <tr>
        <td><%= f.label "定休日" %></td>
        <td>
          <span class="checkbox-inline">
            <% holiday_weekly_columns.each_with_index do |day,i| %>
              <%= f.check_box day.to_sym, {}, "true", "false" %>
              <%= f.label day.to_sym, ["月", "火", "水", "木", "金", "土", "日","祝日"][i] %>
            <% end %>
          </span>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label '場所' %>
        </td>
        <td>
          <%= f.text_field :address %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label 'ジャンル' %>
        </td>
        <td>
          <%= f.text_field :genre %>
          <div class="check_box">
            <%= form.collection_check_boxes(:tag_ids, Tag.all, :id, :genre) do |tag| %>
             <div>
                <%= tag.label do %>
                  <%= tag.check_box %>
                  <%= tag.text %>
                <% end %>
              </div>
             <% end %>
           </div>
        </td>
      </tr>
      <tr>
        <td><%= f.label "コメント" %></td>
        <td><%= f.text_area :post_comment %></td>
      </tr>
      <tr>
        <td><%= f.submit "投稿する", class: "btn btn-success" %></td>
      </tr>
    </table>
  <% end %>
</div>