<%= notice %>

<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h5><%= link_to "新規投稿", new_post_path, class: "fa-solid fa-square-plus" %></h5>
      <%= form_tag posts_path, method: :get, class: "boards_searchForm" do %>
        <%= select_tag :tag_id,
            options_from_collection_for_select(Tag.all, :id, :genre, params[:tag_id]),
            {
              prompt: "ジャンルで絞り込み",
              onchange: 'submit(this.form);'
            }
        %>
      <% end %>

      <div class="search_form">
        <%= form_with(scope: :search, url: posts_path, method: :get, local: true) do |f| %>
          <div class="field">
            <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :genre) do |tag| %>
             <div class="tag_search">
                <%= tag.label do %>
                  <%= tag.check_box %>
                  <%= tag.text %>
                <% end %>
              </div>
            <% end %>
            <%= f.submit "絞り込み検索", class: "search-btn" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-10">
      <h3>投稿一覧</h3>
        <div class="row">
          <% @posts.each do |post| %>
            <div class="col-md-2">
              <p></p>
              <div class="post">
                <%= link_to post_path(post.id) do %>
                  <% if post.image.attached? %>
                    <%= image_tag post.image, size: "140x140" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "140x140" %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="col-md-9">
              <p></p>
              <table>
                <tbody>
                  <tr>
                    <th>店名:</th>
                    <td><%= post.store_name %></td>
                  </tr>
                  <tr>
                    <th>ジャンル:</th>
                    <td>
                      <!--ジャンル-->
                      <% post.tags.each do |tag| %>
                        <%= tag.genre %>
                      <% end %>
                      <!--ジャンル-->
                    <td>
                  </tr>
                  <tr>
                    <th>所在地:</th>
                    <td></td>
                  </tr>
                  <tr>
                    <th>評価平均:</th>
                    <td></td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

