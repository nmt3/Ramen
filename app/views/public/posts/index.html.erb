<%= notice %>

<%= link_to "新規投稿", new_post_path %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
        <h3>投稿一覧</h3>
        <div class="row">
          <% @posts.each do |post| %>
            <div class="col-md-4">
              <div class="post">
                <%= link_to post_path(post.id) do %>
                  <% if post.image.attached? %>
                    <%= image_tag post.image, size: "100x100" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                  <% end %><br>
                  <%= post.store_name %>
                <% end %>
                <!--ジャンル-->
                <p>ジャンル
                  <% post.tags.each do |tag| %>
                    <%= tag.genre %>
                  <% end %>
                </p>
                  <!--ジャンル-->
                <p>都道府県</p>
                <p>
                  コメント
                  <%= post.post_comment %>
                </p>
                <p>評価</p>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

