      size : 36,
      starOff: "<%= asset_path('star-off.png') %>",
      starOn: "<%= asset_path('star-on.png') %>",
      scoreName: 'review[star]',
      half: false,
    };
    raty(elem, opt)
  </script>
<!--ここまでが星レビュー機能-->

  <%= f.label :review_comment, "口コミ内容" %>
  <%= f.text_area :review_comment %>
  <%= f.submit "送信" %>
<% end %>


